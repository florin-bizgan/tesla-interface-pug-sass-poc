mixin superBg(section)
  -
    var { id, who, text, link } = section
  .background(
    id=id
    style=`
      --bgi-mobile: url(${baseUrl}asset/image/background/${id}-mobile.jpg);
      --bgi-desktop: url(${baseUrl}asset/image/background/${id}.jpg);
    `
  )
    .panel
      h1.title= who

      if text 
        .text= text
      if link 
        a.link(
          title=`${text} ${link}`
          href=`#${id}`
        )= link

